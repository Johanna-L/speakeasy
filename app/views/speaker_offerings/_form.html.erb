<%= simple_form_for(@offering) do |f| %>
  <%= f.input :topic,:label => "Thème", placeholder: "Mon sujet de prédilection" %>
  <%= f.input :localisation, :label => "Ville", placeholder: "Ma ville d'intervention" %>
  <%= f.input :budget, :label => "Tarif", placeholder: "Tarif"%>
  <%= f.input :description, :label => "Description", placeholder: "Description détaillée de vos domaines d'expertise"%>
  <%= f.submit 'Enregistrer mon annonce', class:'btn btn-success' %>
<% end %>
